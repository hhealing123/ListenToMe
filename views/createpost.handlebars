{{!-- TEMPLATE FOR PAGE DEDICATED TO ADDING A NEW POST TO THE DATABASE --}}
{{#if posts.length}}
  {{#each posts as |post|}}
  <a href="dashboard/edit/{{post.id}}">
  <div class="card">
    <div class="card-header flex-row justify-space-between">
      <div>{{post.post_title}}</div>
      <div>Posted on {{format_date post.createdAt}}</div>
    </div>
    <div class="card-body">
      {{post.post_body}}
    </div>
  </div>
</a>
{{/each}}
{{/if}}


