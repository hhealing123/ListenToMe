<div class="divider"></div>
<div class="row container">

    <form class="col s6 yellow lighten-4" id="edit-post-form">
        <div class="col card yellow lighten-4">
            <h5> Revise post: </h5>
        </div>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s11">
                        <input value="{{editPosts.topic}}" data-set="{{editPosts.id}}" id="editTopic" type="text" class="validate"/>
                        <label for="Comment">Subject</label>
                    </div>
                    <div class="input-field col s11">
                        <input value="{{editPosts.content}}" id="editContent" type="text" class="validate"/>
                        <label for="Comment">Post</label>
                    </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Press submit here
                </button>
            </form>
        </div>
</div>

